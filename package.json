{
  "name": "barcode-generator-vite",
  "private": true,
  "version": "1.0.0",
  "description": "バーコード生成デスクトップアプリケーション",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "watch": "tsc -w",
    "electron-dev": "concurrently \"npm run dev\" \"npm run watch\" \"electron .\"",
    "build:electron": "npm run build && electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "jsbarcode": "^3.11.6",
    "jspdf": "^2.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.6",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  },
  "build": {
    "appId": "com.example.barcode-generator",
    "productName": "Barcode Generator",
    "icon": "src/assets/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/renderer",
        "to": "renderer",
        "filter": ["**/*"]
      },
      {
        "from": "src/assets/icon.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Apple Development: your.email@example.com (TEAM_ID)",
      "icon": "src/assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/assets/icon.png"
    }
  }
}
